{% extends 'base.html.twig' %}

{% block body %}
    <div class="mt-5 row">
        <div class="mt-5 col-sm-12 offset-md-3 col-md-6">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    {% block authBody %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
