{% extends 'base.html.twig' %}

{% block body %}
    <div class="h-100 row m-0 p-0 d-flex flex-xl-column justify-content-xl-center mt-sm-3 mt-xl-0">
        <div class="col-sm-12 offset-md-3 col-md-6 offset-xl-4 col-xl-4">
            <div class="d-flex flex-column gap-4">
                <h1 class="mb-0">{{ block('title') }}</h1>

                {% block authErrors %}
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    
                    {% for danger in app.flashes('danger') %}
                        <div class="alert alert-danger" role="alert">{{ danger }}</div>
                    {% endfor %}

                    {% for success in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">{{ success }}</div>
                    {% endfor %}

                    {% for info in app.flashes('info') %}
                        <div class="alert alert-info" role="alert">{{ info }}</div>
                    {% endfor %}

                    {% for warning in app.flashes('warning') %}
                        <div class="alert alert-warning" role="alert">{{ warning }}</div>
                    {% endfor %}
                {% endblock %}

                {% block authParentBody %}
                    <div class="card">
                        <div class="card-body">
                            {% block authBody %}
                            {% endblock %}
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
